# description	: A linker, an assembler, and other tools for handling object files
# homepage	: https://www.gnu.org/software/binutils/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: zlib

name=binutils
version=2.33.1
release=1
source=(https://ftp.gnu.org/gnu/binutils/$name-$version.tar.xz)
md5sum=(9406231b7d9dd93731c2d06cefe8aaf1)

build() {
	cd $name-$version

	sed -i '/^SUBDIRS/s/doc//' bfd/Makefile.in

	mkdir -v build
	cd       build

	../configure --prefix=/usr       \
	             --enable-gold       \
		     --disable-nls       \
	             --enable-ld=default \
	             --enable-plugins    \
	             --enable-shared     \
	             --disable-werror    \
	             --with-system-zlib  \
		     --disable-multilib   \
		     --with-lib-path=/usr/lib:/lib
	make tooldir=/usr
	make tooldir=/usr DESTDIR=$PKG install
	rm -fr $PKG/usr/share/info
}
